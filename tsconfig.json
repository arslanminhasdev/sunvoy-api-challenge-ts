{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "outDir": "./dist", // Ensure output is directed to 'dist'
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts" // Ensure this includes all your TS files
  ]
}
